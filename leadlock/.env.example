WEBHOOK_SIGNING_KEY=xxxxx

# Encryption (for CRM API keys stored in DB)
ENCRYPTION_KEY=your-32-byte-fernet-key-here

# Sentry (Error Tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Dashboard
DASHBOARD_JWT_SECRET=change-me-use-openssl-rand-hex-32
