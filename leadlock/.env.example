# Application
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_BASE_URL=https://api.leadlock.io
APP_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://leadlock:password@localhost:5432/leadlock
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI (fallback AI provider)
OPENAI_API_KEY=sk-xxxxx
OPENAI_BASE_URL=
OPENAI_MODEL_FAST=gpt-4o-mini
OPENAI_MODEL_SMART=gpt-4o-mini
OPENAI_MAX_TOKENS_FAST=300
OPENAI_MAX_TOKENS_SMART=500
OPENAI_TIMEOUT_SECONDS=10

# Anthropic (primary AI provider)
ANTHROPIC_API_KEY=sk-ant-xxxxx
ANTHROPIC_MODEL_FAST=claude-haiku-4-5-20251001
ANTHROPIC_MODEL_SMART=claude-sonnet-4-5-20250929
ANTHROPIC_MAX_TOKENS_FAST=300
ANTHROPIC_MAX_TOKENS_SMART=500
ANTHROPIC_TIMEOUT_SECONDS=10
AI_DAILY_BUDGET_USD=5.0

# Twilio (Primary SMS)
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_MESSAGING_SERVICE_SID=MGxxxxx

# Telnyx (Fallback SMS)
TELNYX_API_KEY=KEY_xxxxx
